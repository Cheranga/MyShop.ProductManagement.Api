{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "storageName": {
            "type": "string",
            "defaultValue":"TBD",
            "metadata": {
                "description": "The name of the storage account"
            }
        },
        "storageContainer": {
            "type": "string",
            "defaultValue":"TBD",
            "metadata": {
                "description": "The BLOB container in the storage account"
            }
        },
        "templateSas": {
            "type": "securestring",
            "defaultValue":"TBD",
            "metadata": {
                "description": "The security token to access the ARM template in the storage account."
            }
        },
        "rgName": {
            "type": "string",
            "defaultValue":"TBD",
            "metadata": {
                "description": "Name of the Resource Group to create"
            }
        },
        "rgLocation": {
            "type": "string",
            "defaultValue":"TBD",
            "metadata": {
                "description": "Location for the Resource Group"
            }
        }
    },
    "variables": {
        "templateUri": "[concat('https://',parameters('storageName'),'.blob.core.windows.net/',parameters('storageContainer'),'/')]"
    },
    "resources": [
        {
            "name": "[concat(parameters('rgName'),'deployment')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    // "uri": "[concat('artifactsLocation', '/linkedTemplates/linkedTemplate.json', 'artifactsLocationSasToken')]",
                    "uri": "[concat(concat(variables('templateUri'),'ResourceGroup/template.json'),'?', parameters('templateSas'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "rgName": {
                        "value": "[parameters('rgName')]"
                    },
                    "rgLocation": {
                        "value": "[parameters('rgLocation')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}