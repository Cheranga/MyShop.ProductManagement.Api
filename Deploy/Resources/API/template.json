{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apiName": {
            "type": "string"
        },
        "apiLocation": {
            "type": "string"
        },
        "planName": {
            "type": "string"
        }
    },
    "variables": {        
        "applicationInsightsName": "[concat('appi-', parameters('apiName'))]",
        // "apiKey": "[concat('@Microsoft.KeyVault(SecretUri=https://', parameters('keyVaultName'), '.vault.azure.net/secrets/apiKey/')]",
        "timeZone": "AUS Eastern Standard Time"
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[parameters('apiName')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "location": "[parameters('apiLocation')]",
            "kind": "app",
            "resources": [
                {
                    "name": "slotConfigNames",
                    "type": "config",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('apiName'))]"
                    ],
                    "tags": {
                        "displayName": "slotConfigNames"
                    },
                    "properties": {
                        "appSettingNames": [
                            "CustomerApiKey"
                        ]
                    }
                },
                {
                    "type": "config",
                    "name": "appsettings",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('apiName'))]"
                        // "[resourceId('microsoft.insights/components', variables('applicationInsightsName'))]"
                    ],
                    "properties": {
                        "CustomerApiKey": "This is the production setting.",
                        // "ApiKey": "[variables('apiKey')]",                        
                        "WEBSITE_CONTENTSHARE": "[toLower(parameters('apiName'))]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        // "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsightsName')), '2015-05-01').InstrumentationKey]",
                        // "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_TIME_ZONE": "[variables('timeZone')]",
                        "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": 1
                    }
                }
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('planName'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/slots",
            "name": "[concat(parameters('apiName'),'/Staging')]",
            "location": "[resourceGroup().location]",
            "kind": "app",
            "apiVersion": "2016-08-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('apiName'))]"
            ],
            "identity": {
                "type": "systemAssigned"
            },
            "properties": {
                "serverFarmId": "[parameters('planName')]"
            },
            "resources": [
                {
                    "name": "appsettings",
                    "type": "config",
                    "apiVersion": "2016-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites/Slots', parameters('apiName'), 'Staging')]"
                        // "[concat('microsoft.insights/components/',variables('applicationInsightsName'))]"
                    ],
                    "properties": {
                        "CustomerApiKey": "This is the staging setting.",
                        // "ApiKey": "[variables('apiKey')]",
                        "OrdersApiKey": "This is a new configuration setting.",                        
                        "WEBSITE_CONTENTSHARE": "[toLower(parameters('apiName'))]",
                        "FUNCTIONS_EXTENSION_VERSION": "~3",
                        // "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsightsName')), '2015-05-01').InstrumentationKey]",
                        // "FUNCTIONS_WORKER_RUNTIME": "dotnet",
                        "WEBSITE_TIME_ZONE": "[variables('timeZone')]",
                        "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": 1
                    }
                }
            ]
        }
        // {
        //     "apiVersion": "2018-05-01-preview",
        //     "name": "[variables('applicationInsightsName')]",
        //     "type": "microsoft.insights/components",
        //     "kind": "web",
        //     "location": "[resourceGroup().location]",
        //     "tags": {
        //         "[concat('hidden-link:', resourceId('Microsoft.Web/sites', variables('applicationInsightsName')))]": "Resource"
        //     },
        //     "properties": {
        //         "Application_Type": "web",
        //         "ApplicationId": "[variables('applicationInsightsName')]"
        //     }
        // }
    ]
}
